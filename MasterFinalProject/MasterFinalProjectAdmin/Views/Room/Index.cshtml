@using MasterFinalProjectAdmin.Helpers;
@model List<Room>
@{
    ViewData["Title"] = "Subject";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Otaqlar</h4>
                <a asp-action="Create" class="btn btn-success mt-3">Yeni Otaq Yarat</a>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Ad
                                </th>
                               <th>

                               </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Room item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>

                                    <td>                                      
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                            Yenilə
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            Sil
                                            <i class="mdi mdi-delete"></i>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>