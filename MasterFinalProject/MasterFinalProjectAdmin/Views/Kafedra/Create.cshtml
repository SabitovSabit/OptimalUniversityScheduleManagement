@model Kafedra

@{
    ViewData["Title"] = "Create";
}

<h2>Yarat</h2>

<h4>Kafedralar</h4>
<hr />
<div class="row">
    <div class="form-group col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Kafedra Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Faculty" class="control-label">Fakültə Adı</label>
                @Html.DropDownList("FacultyId", (IEnumerable<SelectListItem>)ViewBag.Faculties, null, new { @class ="form-control" })
            </div>
          
            <div class="form-group">
                <input type="submit" value="Yarat" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Siyahıya Qayıt</a>
</div>