@using MasterFinalProjectAdmin.ViewModels;
@model ClassSubjectViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Yarat</h2>

<h4>Qrup-Fənn</h4>
<hr />
<div class="row">
    <div class="form-group col-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">

                <div class="col-4 mb-3">
                    <label asp-for="ClassId" class="control-label">Qrup</label>
                    @Html.DropDownListFor(model => model.ClassId,
                    Model.GetTeachersSelectList(Model.AllClasses),
                    new { @class ="form-control" })
                </div>
                <div class="col-4 mb-3">
                    <label asp-for="SubjectId" class="control-label">Fənn</label>

                    @Html.DropDownListFor(model => model.SubjectId,
                    Model.GetSubjectsSelectList(Model.AllSubjects),
                    new { @class ="form-control" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Yarat" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Qayit</a>
</div>