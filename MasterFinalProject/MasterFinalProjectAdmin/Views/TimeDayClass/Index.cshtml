@using MasterFinalProjectAdmin.Helpers;
@model List<TimeDayClass>
@{
    ViewData["Title"] = "Class";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Qruplar</h4>
                <a asp-action="Create" class="btn btn-success mt-3">Yeni Cədvəl Yarat</a>

                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Qrup
                                </th>
                                <th>
                                    Fənn
                                </th>
                                <th>
                                    Müəllim
                                </th>
                                <th>
                                    Otaq
                                </th>
                                  <th>
                                    Gün
                                </th>
                                  <th>
                                    Saat
                                </th>
                                  <th>
                                    Saat
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (TimeDayClass item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.ClassName.Name
                                    </td>
                                    <td>
                                        @item.Subject.Name
                                    </td>
                                    <td>
                                        @item.Teacher.Name
                                    </td>
                                    <td>
                                        @item.Room.Name
                                    </td>
                                    <td>
                                        @item.Days.Name
                                    </td>
                                     <td>
                                        @item.TimeOfDay.Name
                                    </td>
                                       <td>
                                        @item.TimeOfDay.Time
                                    </td>
                                    <td>                                      
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">
                                            Yenilə
                                            <i class="mdi mdi-table-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            Sil
                                            <i class="mdi mdi-delete"></i>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>